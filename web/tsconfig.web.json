{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext", 
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "composite": false,
    "noEmit": false
  },
  "include": [
    "./src/browser-main-working.ts",
    "./src/utils/browser-utils.ts",
    "./src/polyfills/browser-polyfills.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
